---
type Props = {
	href: string;
	title?: string;
};

const { href, title } = Astro.props;
---

<a
	class="block rounded px-2 py-1 text-gray-700 transition-colors duration-200 hover:bg-cyan-600/80 hover:text-white dark:text-gray-200 dark:hover:bg-cyan-600/50"
	href={href}
	title={title}
>
	<slot />
</a>
